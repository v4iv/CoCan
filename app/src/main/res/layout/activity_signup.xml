<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.v4ivstudio.cocan.SignupActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:ems="10"
        android:hint="full name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignStart="@+id/password"
        android:hint="username in lowercase" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordVerify"
        android:layout_alignLeft="@+id/passwordVerify"
        android:layout_alignStart="@+id/passwordVerify"
        android:ems="10"
        android:hint="choose password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passwordVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eMail"
        android:layout_alignStart="@+id/eMail"
        android:ems="10"
        android:hint="verify password"
        android:inputType="textPassword"
        android:layout_above="@+id/eMail" />

    <EditText
        android:id="@+id/eMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="email(will be verified)"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/eMail"
        android:layout_alignLeft="@+id/eMail"
        android:layout_alignRight="@+id/eMail"
        android:layout_alignStart="@+id/eMail"
        android:layout_below="@+id/eMail"
        android:text="@string/acceptRegister"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/primaryColorDark"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tncButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:linksClickable="false"
        android:text="@string/tnc"
        android:textColor="#ff1168ff" />

    <TextView
        android:id="@+id/privacyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tncButton"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="@string/privacy"
        android:textAlignment="center"
        android:textColor="#ff1168ff" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/privacyButton"
        android:layout_marginTop="38dp"
        android:text="@string/signup" />


</RelativeLayout>
